{
  "name": "@blaze-chat/markdown",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "svelte-package --watch --input=src",
    "build": "svelte-package --input=src",
    "shiki": "shiki-codegen --langs c,cpp,cmake,asm,llvm,csharp,java,kotlin,go,rust,python,html,css,js,jsx,ts,tsx,vue,svelte,xml,json,yaml,toml,dart,sql,sh,md,latex,typst --themes github-light-default,github-dark-default --engine oniguruma ./src/shiki.bundle.ts"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "svelte": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "dependencies": {
    "@shikijs/core": "^3.21.0",
    "@shikijs/engine-oniguruma": "^3.21.0",
    "@shikijs/langs": "^3.21.0",
    "@shikijs/rehype": "^3.21.0",
    "@shikijs/themes": "^3.21.0",
    "@shikijs/types": "^3.21.0",
    "dompurify": "^3.3.1",
    "github-markdown-css": "^5.8.1",
    "katex": "^0.16.27",
    "rehype-katex": "^7.0.1",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@sveltejs/package": "^2.5.7",
    "shiki-codegen": "^3.21.0",
    "svelte": "catalog:",
    "unplugin-icons": "catalog:"
  },
  "peerDependencies": {
    "@tailwindcss/typography": "catalog:",
    "svelte": "catalog:",
    "tailwindcss": "catalog:",
    "unplugin-icons": "catalog:"
  }
}
